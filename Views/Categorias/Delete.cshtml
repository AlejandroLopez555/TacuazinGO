@model TacuazinGO.Models.Categoria

@{
    ViewData["Title"] = "Eliminar Categoría";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h4> Eliminar Categoría</h4>
                </div>
                <div class="card-body">
                    <h5 class="text-danger">¿Deseas eliminar esta categoria?</h5>

                    @if (Model.Productos.Any())
                    {
                        <div class="alert alert-warning mt-3">
                            <h6>⚠️ Advertencia Importante</h6>
                            <p>Esta categoría tiene <strong>@Model.Productos.Count productos</strong> asociados.</p>
                            <p class="mb-0"><strong>Al eliminar la categoria:</strong></p>
                            <ul>
                                <li>Los productos quedaran <strong>sin categoria</strong></li>
                                <li>No se eliminaran los productos</li>
                                <li>Puedes asignarles una nueva categoría despues</li>
                            </ul>
                        </div>
                    }

                    <div class="alert alert-info mt-3">
                        <h6> Informacion de la Categoria:</h6>
                        <dl class="row">
                            <dt class="col-sm-4">Nombre:</dt>
                            <dd class="col-sm-8">@Model.Nombre</dd>

                            <dt class="col-sm-4">Descripción:</dt>
                            <dd class="col-sm-8">
                                @if (!string.IsNullOrEmpty(Model.Descripcion))
                                {
                                    @Model.Descripcion
                                }
                                else
                                {
                                    <span class="text-muted">Sin descripción</span>
                                }
                            </dd>

                            <dt class="col-sm-4">Productos:</dt>
                            <dd class="col-sm-8">
                                <span class="badge bg-primary">@Model.Productos.Count productos</span>
                            </dd>

                            <dt class="col-sm-4">Fecha Creacion:</dt>
                            <dd class="col-sm-8">@Model.FechaCreacion.ToString("dd/MM/yyyy")</dd>
                        </dl>
                    </div>

                    <form asp-action="Delete" class="mt-4">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-secondary me-md-2">← Cancelar</a>
                            <button type="submit" class="btn btn-danger">
                                 Si, Eliminar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
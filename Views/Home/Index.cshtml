@model TacuazinGO.ViewModels.DashboardViewModel

@{
    ViewData["Title"] = "Dashboard TacuazinGO";
}

<div class="text-center mb-4">
    <h1 class="display-4">
        <span class="text-custom-gray">Tacuazin</span><span class="text-custom-pink">GO</span>
    </h1>
    <p class="lead text-muted">Sistema de Gestión para Pequeños Negocios</p>
</div>

<div class="row mt-5">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-dark text-white">
                <h4 class="mb-0"> Productos</h4>
            </div>
            <div class="card-body">
                <!-- Bloque de la barra de busqueda y filtros -->
                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="input-group">
                            <span class="input-group-text">🔍</span>
                            <input type="text" id="searchInput" class="form-control" placeholder="Buscar productos...">
                        </div>
                    </div>
                    <div class="col-md-3">
                        <select id="categoryFilter" class="form-select">
                            <option value="">Todas las categorías</option>
                            @foreach (var categoria in Model.Productos.Where(p => p.Categoria != null).Select(p => p.Categoria.Nombre).Distinct().OrderBy(c => c))
                            {
                                <option value="@categoria">@categoria</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-3">
                        <select id="stockFilter" class="form-select">
                            <option value="">Todo el stock</option>
                            <option value="low">Stock bajo (< 10)</option>
                            <option value="medium">Stock medio (10-20)</option>
                            <option value="high">Stock alto (> 20)</option>
                            <option value="out">Sin stock</option>
                        </select>
                    </div>
                </div>

                <!-- Estadisticas de los Filtros -->
                <div class="row mb-3">
                    <div class="col-12">
                        <div class="d-flex justify-content-between align-items-center">
                            <small class="text-muted">
                                Mostrando <span id="productCount">@Model.Productos.Count</span> de @Model.Productos.Count productos
                            </small>
                            <div>
                                <button id="btnResetFilters" class="btn btn-sm btn-outline-secondary">
                                    🔄 Limpiar filtros
                                </button>
                                <button id="btnExportTable" class="btn btn-sm btn-outline-success">
                                    📄 Exportar
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Bloque de la Tabla de Productos -->
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover" id="productsTable">
                        <thead class="table-dark">
                            <tr>
                                <th data-sort="nombre">Nombre ▲▼</th>
                                <th data-sort="precio" class="text-end">Precio ▲▼</th>
                                <th data-sort="stock" class="text-end">Stock ▲▼</th>
                                <th data-sort="categoria">Categoria ▲▼</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var producto in Model.Productos)
                            {
                                <tr class="product-row"
                                    data-nombre="@producto.Nombre.ToLower()"
                                    data-categoria="@(producto.Categoria?.Nombre?.ToLower() ?? "sin categoria")"
                                    data-stock="@producto.Stock"
                                    data-precio="@producto.Precio">
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <strong>@producto.Nombre</strong>
                                            @if (producto.Stock < 10)
                                            {
                                                <span class="badge bg-danger ms-2">⚠️ Bajo</span>
                                            }
                                            else if (producto.Stock == 0)
                                            {
                                                <span class="badge bg-dark ms-2">🔴 Agotado</span>
                                            }
                                        </div>
                                    </td>
                                    <td class="text-end">
                                        <span class="fw-bold text-success">$@producto.Precio.ToString("N2")</span>
                                    </td>
                                    <td class="text-end">
                                        @if (producto.Stock < 10)
                                        {
                                            <span class="badge bg-warning text-dark">@producto.Stock</span>
                                        }
                                        else if (producto.Stock == 0)
                                        {
                                            <span class="badge bg-danger">@producto.Stock</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success">@producto.Stock</span>
                                        }
                                    </td>
                                    <td>
                                        @if (producto.Categoria != null)
                                        {
                                            <span class="badge bg-secondary">@producto.Categoria.Nombre</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Sin categoria</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Mensaje para cuando no hay resultados -->
                <div id="noResults" class="alert alert-info text-center d-none">
                    <h5>🔍 No se encontraron productos</h5>
                    <p class="mb-0">Intenta con otros términos de búsqueda o ajusta los filtros.</p>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        
        <h3> Resumen Financiero</h3>

        <!-- Tarjeta para Ventas -->
        <div class="card mb-3 border-success">
            <div class="card-body">
                <h5 class="card-title text-success"> Ingresos</h5>
                <p class="card-text h4">$@Model.TotalVentas.ToString("N2")</p>
                <small class="text-muted">Total en ventas</small>
            </div>
        </div>

        <!-- Tarjeta para Gastos -->
        <div class="card mb-3 border-warning">
            <div class="card-body">
                <h5 class="card-title text-warning"> Gastos</h5>
                <p class="card-text h4">$@Model.TotalGastos.ToString("N2")</p>
                <small class="text-muted">Total en gastos</small>
            </div>
        </div>

        <!-- Tarjeta de Balance -->
        <div class="card mb-3 @((Model.TotalVentas - Model.TotalGastos) >= 0 ? "border-primary" : "border-danger")">
            <div class="card-body">
                <h5 class="card-title @((Model.TotalVentas - Model.TotalGastos) >= 0 ? "text-primary" : "text-danger")">
                     Balance
                </h5>
                <p class="card-text h4 @((Model.TotalVentas - Model.TotalGastos) >= 0 ? "text-primary" : "text-danger")">
                    $@((Model.TotalVentas - Model.TotalGastos).ToString("N2"))
                </p>
                <small class="text-muted">Ventas - Gastos</small>
            </div>
        </div>

        <!-- Block del ultimo Gasto -->
        @if (Model.GastoReciente != null)
        {
            <div class="card">
                <div class="card-header">
                    <h6> Último Gasto</h6>
                </div>
                <div class="card-body">
                    <p class="mb-1"><strong>@Model.GastoReciente.Descripcion</strong></p>
                    <p class="mb-1">$@Model.GastoReciente.Monto.ToString("N2")</p>
                    <small class="text-muted">@Model.GastoReciente.Categoria • @Model.GastoReciente.Fecha.ToString("dd/MM/yyyy")</small>
                </div>
            </div>
        }
    </div>
</div>

<!-- Botones de Navegacion -->
<div class="row mt-4">
    <div class="col-12">
        <a href="/Productos" class="btn btn-primary me-2">
             Gestionar Productos
        </a>
        <a href="/Home/RegistrarVenta" class="btn btn-success me-2">
             Registrar Venta
        </a>
        <a href="/Home/RegistrarGasto" class="btn btn-warning me-2">
             Registrar Gasto
        </a>
        <a href="/Home/Reportes" class="btn btn-info">
             Ver Reportes
        </a>
    </div>
</div>

@section Scripts {
    <script>
        // Sistema de Busqueda y Filtros
        document.addEventListener('DOMContentLoaded', function() {
            const searchInput = document.getElementById('searchInput');
            const categoryFilter = document.getElementById('categoryFilter');
            const stockFilter = document.getElementById('stockFilter');
            const productRows = document.querySelectorAll('.product-row');
            const productCount = document.getElementById('productCount');
            const noResults = document.getElementById('noResults');
            const btnResetFilters = document.getElementById('btnResetFilters');
            const btnExportTable = document.getElementById('btnExportTable');

            let currentSort = { column: 'nombre', direction: 'asc' };

            // Funcion para aplicar filtros
            function applyFilters() {
                let visibleCount = 0;
                const searchTerm = searchInput.value.toLowerCase();
                const selectedCategory = categoryFilter.value.toLowerCase();
                const selectedStock = stockFilter.value;

                productRows.forEach(row => {
                    const nombre = row.getAttribute('data-nombre');
                    const categoria = row.getAttribute('data-categoria');
                    const stock = parseInt(row.getAttribute('data-stock'));

                    let matchesSearch = nombre.includes(searchTerm);
                    let matchesCategory = selectedCategory === '' || categoria === selectedCategory;
                    let matchesStock = true;

                    // Aplicar filtro de stock
                    switch(selectedStock) {
                        case 'low': matchesStock = stock < 10 && stock > 0; break;
                        case 'medium': matchesStock = stock >= 10 && stock <= 20; break;
                        case 'high': matchesStock = stock > 20; break;
                        case 'out': matchesStock = stock === 0; break;
                    }

                    if (matchesSearch && matchesCategory && matchesStock) {
                        row.style.display = '';
                        visibleCount++;
                    } else {
                        row.style.display = 'none';
                    }
                });

                // Actualizar contador
                productCount.textContent = visibleCount;

                // Mostrar/ocultar mensaje de no resultados
                if (visibleCount === 0) {
                    noResults.classList.remove('d-none');
                } else {
                    noResults.classList.add('d-none');
                }
            }

            //event listeners
            searchInput.addEventListener('input', applyFilters);
            categoryFilter.addEventListener('change', applyFilters);
            stockFilter.addEventListener('change', applyFilters);

            // Boton limpiar filtross
            btnResetFilters.addEventListener('click', function() {
                searchInput.value = '';
                categoryFilter.value = '';
                stockFilter.value = '';
                applyFilters();
            });

            // Boton exportar tabla
            btnExportTable.addEventListener('click', function() {
                Swal.fire({
                    title: '📊 Exportar Productos',
                    html: `
                        <div class="text-start">
                            <p>Exportar lista de productos filtrada:</p>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="exportType" id="exportCurrent" value="current" checked>
                                <label class="form-check-label" for="exportCurrent">
                                    Productos filtrados (<span id="exportCount">${productCount.textContent}</span>)
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="exportType" id="exportAll" value="all">
                                <label class="form-check-label" for="exportAll">
                                    Todos los productos (@Model.Productos.Count)
                                </label>
                            </div>
                        </div>
                    `,
                    icon: 'question',
                    showCancelButton: true,
                    confirmButtonText: '📄 Generar CSV',
                    cancelButtonText: 'Cancelar'
                }).then((result) => {
                    if (result.isConfirmed) {
                        exportToCSV(result.value.exportType);
                    }
                });
            });

            // Funcion para exportar a CSV
            function exportToCSV(exportType) {
                let csvContent = "Nombre,Precio,Stock,Categoría,Estado\n";

                productRows.forEach(row => {
                    if (exportType === 'all' || row.style.display !== 'none') {
                        const nombre = row.cells[0].querySelector('strong').textContent;
                        const precio = row.cells[1].textContent.replace('$', '');
                        const stock = row.getAttribute('data-stock');
                        const categoria = row.cells[3].textContent;
                        const estado = stock == 0 ? 'Agotado' : stock < 10 ? 'Stock Bajo' : 'Disponible';

                        csvContent += `"${nombre}",${precio},${stock},"${categoria}","${estado}"\n`;
                    }
                });

                const blob = new Blob([csvContent], { type: 'text/csv;charset=utf-8;' });
                const link = document.createElement('a');
                const url = URL.createObjectURL(blob);

                link.setAttribute('href', url);
                link.setAttribute('download', `productos_tacuazingo_${new Date().toISOString().split('T')[0]}.csv`);
                link.style.visibility = 'hidden';

                document.body.appendChild(link);
                link.click();
                document.body.removeChild(link);

                Swal.fire({
                    title: '✅ CSV Exportado',
                    text: 'La lista de productos se ha descargado exitosamente',
                    icon: 'success',
                    timer: 2000,
                    showConfirmButton: false
                });
            }

            // Ordenamiento de columnas
            document.querySelectorAll('th[data-sort]').forEach(header => {
                header.style.cursor = 'pointer';
                header.addEventListener('click', function() {
                    const column = this.getAttribute('data-sort');
                    sortTable(column);
                });
            });

            function sortTable(column) {
                const rows = Array.from(productRows);
                const direction = currentSort.column === column && currentSort.direction === 'asc' ? 'desc' : 'asc';

                rows.sort((a, b) => {
                    let aValue, bValue;

                    switch(column) {
                        case 'nombre':
                            aValue = a.getAttribute('data-nombre');
                            bValue = b.getAttribute('data-nombre');
                            break;
                        case 'precio':
                            aValue = parseFloat(a.getAttribute('data-precio'));
                            bValue = parseFloat(b.getAttribute('data-precio'));
                            break;
                        case 'stock':
                            aValue = parseInt(a.getAttribute('data-stock'));
                            bValue = parseInt(b.getAttribute('data-stock'));
                            break;
                        case 'categoria':
                            aValue = a.getAttribute('data-categoria');
                            bValue = b.getAttribute('data-categoria');
                            break;
                    }

                    if (direction === 'asc') {
                        return aValue > bValue ? 1 : -1;
                    } else {
                        return aValue < bValue ? 1 : -1;
                    }
                });

                // Reordenar tabla
                const tbody = document.querySelector('#productsTable tbody');
                tbody.innerHTML = '';
                rows.forEach(row => tbody.appendChild(row));

                // Actualizar indicadores de ordenamiento
                document.querySelectorAll('th[data-sort]').forEach(th => {
                    th.innerHTML = th.innerHTML.replace('▲▼', '▲▼');
                });

                const currentHeader = document.querySelector(`th[data-sort="${column}"]`);
                currentHeader.innerHTML = currentHeader.innerHTML.replace('▲▼', direction === 'asc' ? '▲' : '▼');

                currentSort = { column, direction };
            }
        
        
        });
    </script>
}
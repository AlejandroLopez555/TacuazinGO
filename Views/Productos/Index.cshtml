@model IEnumerable<TacuazinGO.Models.Producto>

@{
    ViewData["Title"] = "Gestión de Productos";
}

<div class="container">
    <h1> Gestion de Productos</h1>

    <p>
        <a asp-action="Create" class="btn btn-success">
            ➕ Agregar Nuevo Producto
        </a>
        <a href="/" class="btn btn-secondary">← Volver al Dashboard</a>
    </p>

    <!-- Block de las Tarjetas de Resumen -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-white bg-primary">
                <div class="card-body">
                    <h5 class="card-title">Total Productos</h5>
                    <p class="card-text h3">@Model.Count()</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-success">
                <div class="card-body">
                    <h5 class="card-title">Stock Total</h5>
                    <p class="card-text h3">@Model.Sum(p => p.Stock)</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-info">
                <div class="card-body">
                    <h5 class="card-title">Valor Inventario</h5>
                    <p class="card-text h3">$@Model.Sum(p => p.Precio * p.Stock).ToString("N2")</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-warning">
                <div class="card-body">
                    <h5 class="card-title">Stock Bajo (< 10)</h5>
                    <p class="card-text h3">@Model.Count(p => p.Stock < 10)</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Tabla de Productos -->
    <div class="card">
        <div class="card-header">
            <h5>Lista de Productos</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered">
                    <thead class="table-dark">
                        <tr>
                            <th>Nombre</th>
                            <th>Precio</th>
                            <th>Stock</th>
                            <th>Categoría</th>
                            <th>Valor Total</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="@(item.Stock < 10 ? "table-warning" : "")">
                                <td>
                                    <strong>@Html.DisplayFor(modelItem => item.Nombre)</strong>
                                    @if (item.Stock < 10)
                                    {
                                        <span class="badge bg-danger">Stock Bajo</span>
                                    }
                                </td>
                                <td>$@Html.DisplayFor(modelItem => item.Precio)</td>
                                <td>@Html.DisplayFor(modelItem => item.Stock)</td>
                                <td>
                                    @if (item.Categoria != null)
                                    {
                                        <span class="badge bg-secondary">@item.Categoria.Nombre</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Sin categoría</span>
                                    }
                                </td>
                                <td>$@((item.Precio * item.Stock).ToString("N2"))</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm">
                                             Editar
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info btn-sm">
                                             Ver
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm">
                                             Eliminar
                                        </a>
                                    </div>
                                </td>
                            </tr>
                            
                        }
                    </tbody>
                    
                </table>
            </div>
        </div>
    </div>
</div>